<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bottom_sheet_background">

    <!-- Content Type Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="8dp">

        <!-- Text Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_text"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:text="Text"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_text"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="@color/white"
            app:backgroundTint="@color/content_button_blue" />

        <!-- Audio Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_audio"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:text="Audio"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_audio"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="@color/white"
            app:backgroundTint="@color/content_button_blue" />

        <!-- Image Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_image"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:text="Image"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_image"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="@color/white"
            app:backgroundTint="@color/content_button_blue" />

        <!-- Drawing Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_drawing"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:text="Drawing"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_drawing"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="@color/white"
            app:backgroundTint="@color/content_button_blue" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_todo"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:text="List"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_todo"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="@color/white"
            app:backgroundTint="@color/content_button_blue" />

    </LinearLayout>

    <!-- Close Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/close_button_blue"
        app:cornerRadius="24dp"
        app:icon="@null" />

</LinearLayout>