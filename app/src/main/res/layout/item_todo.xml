<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_drag_handle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_drag_handle"
            android:layout_marginEnd="8dp"
            android:contentDescription="Drag to reorder" />

        <CheckBox
            android:id="@+id/checkbox_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/et_todo_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Enter todo item..."
            android:textSize="16sp"
            android:maxLines="3"
            android:inputType="textCapSentences|textMultiLine" />

        <ImageButton
            android:id="@+id/btn_delete_todo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete_small"
            android:contentDescription="Delete item"
            app:tint="#FF5722" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
