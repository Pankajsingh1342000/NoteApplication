<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar with drawing controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btn_undo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_undo"
            android:enabled="false"
            android:alpha="0.5"
            android:contentDescription="Undo" />

        <ImageButton
            android:id="@+id/btn_redo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_redo"
            android:enabled="false"
            android:alpha="0.5"
            android:contentDescription="Redo" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            android:background="#CCCCCC" />

        <ImageButton
            android:id="@+id/btn_brush_color"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="@drawable/color_picker_background"
            android:src="@drawable/ic_palette"
            android:contentDescription="Choose Color" />

        <ImageButton
            android:id="@+id/btn_brush_style"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_brush"
            android:contentDescription="Brush Style" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_clear"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_clear"
            android:contentDescription="Clear" />

        <ImageButton
            android:id="@+id/btn_save"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_save"
            android:contentDescription="Save" />

    </LinearLayout>

    <!-- Custom Drawing View -->
    <com.example.noteapplicationmvvmflow.feature.drawing.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF" />

</LinearLayout>